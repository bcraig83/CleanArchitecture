{
  "Application": {
    "StoreAuthorInLowercase": true
  },
  "Infrastructure": {
    "DataAccess": {
      "PersistenceMechanism": "EntityFramework", // One of InMemory or EntityFramework. Defaults to InMemory
      "UseEntityFrameworkInMemoryDatabase": true // If using EF, we can still use an in-memory database. Defaults to true
    },
    "Integration": {
      "UseStaticDateTimeService": false
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
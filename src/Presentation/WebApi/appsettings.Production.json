{
  "Application": {
    "StoreAuthorInLowercase": true
  },
  "Infrastructure": {
    "DataAccess": {
      "PersistenceMechanism": "EntityFramework", // One of InMemory or EntityFramework. Defaults to InMemory
      "UseEntityFrameworkInMemoryDatabase": false // If using EF, we can still use an in-memory database. Defaults to true
    },
    "Integration": {
      "UseStaticDateTimeService": false
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=caSampleDb;Trusted_Connection=True;MultipleActiveResultSets=true;"
  },
  "IdentityServer": {
    "Key": {
      "Type": "Store",
      "StoreName": "My",
      "StoreLocation": "CurrentUser",
      "Name": "CN=MyApplication"
    }
  }
}